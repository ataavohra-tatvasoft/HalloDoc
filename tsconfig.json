{
  "compilerOptions": {
    "strict": false,
    "target": "es2017",
    "lib": [
      "ES2018",
      "esnext.asynciterable",
      "DOM"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./src/config/*.json"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
